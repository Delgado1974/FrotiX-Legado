@page
@model FrotiX.Models.ModeloVeiculo

@{
	ViewData["Title"] = "Modelos de Veículos";
	ViewData["PageName"] = "modeloveiculo_index";
	ViewData["Heading"] = "<i class='fa-duotone fa-car-garage'></i> Cadastros: <span class='fw-300'>Modelos de Veículos</span>";
	ViewData["Category1"] = "Cadastros";
	ViewData["PageIcon"] = "fa-duotone fa-car-garage";
}

@section HeadBlock {
	<style>
/* ======== OUTLINE BRANCO NO BOTÃO DO HEADER (Padrão FrotiX) ======== */
		.ftx-card-header .btn-fundo-laranja {
			outline: 2px solid rgba(255, 255, 255, 0.5) !important;
			outline-offset: 1px;
			transition: all 0.2s ease;
		}

		.ftx-card-header .btn-fundo-laranja:hover {
			outline: 2px solid rgba(255, 255, 255, 0.8) !important;
			outline-offset: 2px;
		}

	</style>
}

<style>
	.fundo-cinza {
		background-color: #2F4F4F;
		color: aliceblue;
	}

	.label {
		color: white;
	}
</style>

<div class="row">
	<div class="col-xl-12">
		<div id="panel-1" class="panel">
			<div class="panel-container show">
				<!-- HEADER DO CARD -->
				<div class="ftx-card-header">
					<h2 class="titulo-paginas">
						<i class="fa-duotone fa-car-bus"></i>
						Listagem de Modelos de Veículos
					</h2>
					<div class="ftx-card-actions">
						<a href="/ModeloVeiculo/Upsert"
						   class="btn btn-fundo-laranja"
						   data-ftx-loading>
							<i class="fa-duotone fa-clone-plus icon-pulse me-1"></i>
							Adicionar Modelo
						</a>
					</div>
				</div>

				<div class="panel-content">
					<div class="box-body">
						<br /><br />
						<table id="tblModeloVeiculo" class="table table-bordered table-striped" width="100%">
							<thead>
								<tr>
									<th>Marca do Veículo</th>
									<th>Modelo do Veículo</th>
									<th>Status</th>
									<th>Ação</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section ScriptsBlock {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

	<script src="~/js/cadastros/modeloveiculo.js" asp-append-version="true"></script>
}
