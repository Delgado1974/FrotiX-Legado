@section HeadBlock {

}

<form method="post" asp-action="Upsert">
	<div class="row">
		<div class="col-xl-12">
			<div id="panel-1" class="panel">
				<div class="panel-container show">
					<div class="panel-content">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						@if (Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId != Guid.Empty)
						{
							<input type="hidden" asp-for="ModeloVeiculoObj.ModeloVeiculo.ModeloId" />
						}

						<!-- Cabeçalho Modernizado -->
						<div class="col-12 px-3" style="border-bottom:1px solid #325d88">
							<h2 class="titulo-paginas d-flex align-items-center pb-3">
								<i class="fa-duotone fa-solid fa-truck-suv fa-xl me-2 icon-150" aria-hidden="true"></i>
								@(Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId != Guid.Empty ? "Atualizar " : "Criar ") Modelo de Veículo
							</h2>
						</div>

						<div class="col-8 pt-3">
							<!-- SELECT MARCA (com afastamento) -->
							<div class="row">
								<div class="col-12">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="ModeloVeiculoObj.ModeloVeiculo.MarcaId"></label>
										<span class="text-danger font-weight-light" asp-validation-for="ModeloVeiculoObj.ModeloVeiculo.MarcaId"></span>
										@Html.DropDownListFor(m => m.ModeloVeiculoObj.ModeloVeiculo.MarcaId,
										Model.ModeloVeiculoObj.MarcaList,
										"- Selecione uma Marca -",
										new { @class = "form-control form-control-xs" })
									</div>
								</div>
							</div>

							<!-- INPUT DESCRIÇÃO -->
							<div class="row">
								<div class="col-12">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="ModeloVeiculoObj.ModeloVeiculo.DescricaoModelo"></label>
										<span class="text-danger font-weight-light" asp-validation-for="ModeloVeiculoObj.ModeloVeiculo.DescricaoModelo"></span>
										<input class="form-control form-control-xs" asp-for="ModeloVeiculoObj.ModeloVeiculo.DescricaoModelo" placeholder="Insira a descrição do modelo" />
									</div>
								</div>
							</div>

							<!-- CHECKBOX STATUS -->
							<div class="row">
								<div class="col-12">
									<div class="form-group">
										<label class="font-weight-bold" asp-for="ModeloVeiculoObj.ModeloVeiculo.Status">
											<input type="checkbox" class="form-check-input" asp-for="ModeloVeiculoObj.ModeloVeiculo.Status" />
											<span class="text-danger font-weight-light" asp-validation-for="ModeloVeiculoObj.ModeloVeiculo.Status"></span>
											Ativo/Inativo
										</label>
									</div>
									<br />
								</div>
							</div>

							<!-- BOTÕES -->
							<div class="form-group row">
								<div class="col-9">
									<div class="row">
										<div class="col-6">
											@if (Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId != Guid.Empty)
											{
												<button method="post" asp-page-handler="Edit" asp-route-id="@Model.ModeloVeiculoObj.ModeloVeiculo.ModeloId" class="btn btn-azul form-control" data-ejtip="Atualizar modelo de veículo">
													<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i> Atualizar
												</button>
											}
											else
											{
												<button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-azul form-control" data-ejtip="Criar novo modelo de veículo">
													<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i> Criar
												</button>
											}
										</div>
										<div class="col-6">
											<a asp-page="./Index" class="btn btn-vinho form-control" data-ejtip="Voltar para a lista de modelos">
												<i class="fa-solid fa-rotate-left icon-space icon-rotate-left"></i> Voltar à Lista
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section ScriptsBlock {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
}
