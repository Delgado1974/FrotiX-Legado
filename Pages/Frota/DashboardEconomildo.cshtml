        // Funções auxiliares
        function formatarNumero(num) {
            try {
                if (num === null || num === undefined) return '-';
                return new Intl.NumberFormat('pt-BR').format(Math.round(num));
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'formatarNumero', error);
                return '-';
            }
        }

        function formatarNumeroGrande(num) {
            try {
                if (num === null || num === undefined) return '-';
                if (num >= 1000000) {
                    return (num / 1000000).toFixed(3).replace('.', ',') + ' Mi';
                }
                if (num >= 1000) {
                    return (num / 1000).toFixed(0).replace('.', ',') + ' Mil';
                }
                return formatarNumero(num);
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'formatarNumeroGrande', error);
                return '-';
            }
        }

        function formatarNumeroResumido(num) {
            try {
                if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
                if (num >= 1000) return (num / 1000).toFixed(0) + 'K';
                return num;
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'formatarNumeroResumido', error);
                return num;
            }
        }

        function createGradient(ctx, color1, color2) {
            try {
                const gradient = ctx.createLinearGradient(0, 0, 0, 300);
                gradient.addColorStop(0, color1);
                gradient.addColorStop(1, color2);
                return gradient;
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'createGradient', error);
                return color1;
            }
        }

        function hexToRgba(hex, alpha) {
            try {
                const r = parseInt(hex.slice(1, 3), 16);
                const g = parseInt(hex.slice(3, 5), 16);
                const b = parseInt(hex.slice(5, 7), 16);
                return `rgba(${r}, ${g}, ${b}, ${alpha})`;
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'hexToRgba', error);
                return hex;
            }
        }

        // ========== EXPORTAR PDF - FUNÇÃO UNIFICADA ==========

        async function exportarPdf(tipo) {
            try {
                AppToast.show('amarelo', 'Gerando PDF, aguarde...', 3000);

                const mob = document.getElementById('filtroMob').value;
                const mes = document.getElementById('filtroMes').value;
                const ano = document.getElementById('filtroAno').value;

                const params = new URLSearchParams({ tipo: tipo });
                if (mob) params.append('mob', mob);
                if (mes) params.append('mes', mes);
                if (ano) params.append('ano', ano);

                const response = await fetch(`/api/Relatorios/ExportarEconomildo?${params.toString()}`, {
                    method: 'GET'
                });

                if (!response.ok) {
                    const errorText = await response.text();
                    throw new Error(errorText || 'Erro ao gerar PDF');
                }

                const blob = await response.blob();

                const contentDisposition = response.headers.get('Content-Disposition');
                let nomeArquivo = `Economildo_${tipo}.pdf`;
                if (contentDisposition) {
                    const match = contentDisposition.match(/filename="?([^";\n]+)"?/);
                    if (match) nomeArquivo = match[1];
                }

                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = nomeArquivo;
                document.body.appendChild(a);
                a.click();

                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);

                AppToast.show('verde', 'PDF gerado com sucesso!', 3000);

            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'exportarPdf', error);
            }
        }
