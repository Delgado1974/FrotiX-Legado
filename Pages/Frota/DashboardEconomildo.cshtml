            <div class="eco-mob-name">MOB Rodoviária</div>
            <div class="eco-mob-media">Média Mensal: <span id="mediaRodoviaria">-</span></div>
        </div>
        <div class="eco-mob-card cefor" id="cardCefor">
            <div class="eco-mob-value" id="totalCefor">-</div>
            <div class="eco-mob-name">MOB Cefor</div>
            <div class="eco-mob-media">Média Mensal: <span id="mediaCefor">-</span></div>
        </div>
    </div>

    <!-- KPIs Grid -->
    <div class="eco-kpi-grid">
