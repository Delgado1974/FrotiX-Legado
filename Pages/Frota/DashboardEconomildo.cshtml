        function renderizarHeatmap(dados, maxValor) {
            try {
                const tbody = document.getElementById('heatmapBody');
                if (!tbody) return;

                tbody.innerHTML = '';

                dados.forEach(dia => {
                    const tr = document.createElement('tr');

                    // Coluna do dia da semana
                    const tdDia = document.createElement('td');
                    tdDia.textContent = dia.diaSemana;
                    tr.appendChild(tdDia);

                    // Colunas das horas (0-23)
                    for (let hora = 0; hora < 24; hora++) {
                        const td = document.createElement('td');
                        const valor = dia.horas[hora];

                        // Calcular intensidade (0-6)
                        const intensidade = calcularIntensidadeHeatmap(valor, maxValor);
                        td.className = `eco-heatmap-${intensidade}`;

                        // Mostrar valor apenas se > 0
                        if (valor > 0) {
                            td.textContent = valor;
                        }

                        // Tooltip com detalhes
                        td.title = `${dia.diaSemana} às ${hora.toString().padStart(2, '0')}:00 - ${valor} viagem(ns)`;

                        tr.appendChild(td);
                    }

                    tbody.appendChild(tr);
                });
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'renderizarHeatmap', error);
            }
        }

        function calcularIntensidadeHeatmap(valor, maxValor) {
            try {
                if (valor === 0) return 0;
                if (maxValor === 0) return 0;

                // Escala de 1 a 6 baseada no percentual do máximo
                const percentual = valor / maxValor;

                if (percentual <= 0.1) return 1;
                if (percentual <= 0.25) return 2;
                if (percentual <= 0.4) return 3;
                if (percentual <= 0.6) return 4;
                if (percentual <= 0.8) return 5;
                return 6;
            } catch (error) {
                Alerta.TratamentoErroComLinha('DashboardEconomildo.cshtml', 'calcularIntensidadeHeatmap', error);
                return 0;
            }
        }

