@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model FrotiX.Pages.Combustivel.UpsertModel

@{
    ViewData["Title"] = "Tipos de Combustível";
    ViewData["PageName"] = "combustivel_index";
    ViewData["Heading"] = "<i class='fa-duotone fa-gas-pump'></i> Cadastros: <span class='fw-300'>Tipos de Combustível</span>";
    ViewData["Category1"] = "Cadastros";
    ViewData["PageIcon"] = "fa-duotone fa-chalkboard-user";
}

<style>
    .form-control-xs {
        height: calc(1em + .775rem + 2px) !important;
        padding: .125rem .25rem !important;
        font-size: .75rem !important;
        line-height: 1.5;
        border-radius: .2rem;
    }

    .label {
        margin-bottom: -5px;
        margin-top: 10px;
    }
</style>

@section HeadBlock {
    <!-- TOASTR REMOVIDO - Agora usamos AppToast -->
}

<form method="post" asp-action="Upsert">
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <!-- ===== HEADER FROTIX ===== -->
                <div class="ftx-card-header">
                    <h2 class="titulo-paginas">
                        <i class="fa-duotone fa-gas-pump"></i>
                        @(Model.CombustivelObj.CombustivelId != Guid.Empty ? "Atualizar " : "Criar ") Tipo de Combustível
                    </h2>
                </div>

                <div class="panel-container show">
                    <div class="panel-content">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (Model.CombustivelObj.CombustivelId != Guid.Empty)
                        {
                            <input type="hidden" asp-for="CombustivelObj.CombustivelId" />
                        }

                        <div class="col-8 pt-3">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label class="label font-weight-bold" asp-for="CombustivelObj.Descricao"></label>
                                        <span class="text-danger font-weight-light" asp-validation-for="CombustivelObj.Descricao"></span>
                                        <input class="form-control form-control-xs" asp-for="CombustivelObj.Descricao" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <span class="text-danger" asp-validation-for="CombustivelObj.Status"></span>
                                        <input type="checkbox" class="form-check-input" asp-for="CombustivelObj.Status" />
                                        <label class="font-weight-bold" asp-for="CombustivelObj.Status"></label>
                                    </div>
                                    <br />
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-9">
                                    <div class="row">
                                        <div class="col-6">
                                            <button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-azul btn-submit-spin form-control" data-ejtip="@(Model.CombustivelObj.CombustivelId != Guid.Empty ? "Atualizar tipo de combustível" : "Criar novo tipo de combustível")">
                                                <i class="fa-duotone fa-floppy-disk icon-space icon-pulse"></i>
                                                @(Model.CombustivelObj.CombustivelId != Guid.Empty ? "Atualizar Combustível" : "Criar Combustível")
                                            </button>
                                        </div>
                                        <div class="col-6">
                                            <a asp-page="./Index" class="btn btn-ftx-fechar form-control" data-ejtip="Cancelar e voltar à lista">
                                                <i class="fa-duotone fa-circle-xmark icon-space icon-pulse"></i>
                                                Cancelar Operação
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section ScriptsBlock {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
}
