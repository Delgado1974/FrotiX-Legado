                    responsive: true,
                    ajax: {
                        url: "/api/unidade/listalotacao",
                        type: "GET",
                        data: { motoristaId: motoristaId },
                        datatype: "json",
                        dataSrc: function(json) {
                            esconderLoading();
                            // Tratar diferentes formatos de resposta
                            if (Array.isArray(json)) {
                                return json;
                            }
                            if (json && json.data) {
                                return json.data;
                            }
                            return [];
                        },
                        error: function(xhr, error, thrown) {
                            esconderLoading();
                            console.error("Erro ao carregar lotações:", error, thrown);
                        }
                    },
                    columns: [
                        { data: "unidade" },
                        { data: "dataInicial" },
                        { data: "dataFim" },
                        {
                            data: "lotado",
                            render: function (data, type, row) {
                                try {
                                    if (data) {
                                        return `<a href="javascript:void(0)" class="btn btn-verde btn-xs" data-ejtip="Motorista lotado">
                                                    <i class="fa-duotone fa-circle-check"></i> Lotado
                                                </a>`;
                                    }
                                    return `<a href="javascript:void(0)" class="btn fundo-cinza btn-xs" data-ejtip="Motorista removido">
                                                <i class="fa-duotone fa-circle-xmark"></i> Removido
                                            </a>`;
                                } catch (error) {
                                    Alerta.TratamentoErroComLinha("LotacaoMotoristas.cshtml", "lotado.render", error);
                                    return "";
                                }
                            }
                        },
                        {
                            data: "motivo",
                            render: function (data, type, full) {
                                try {
                                    return `<span data-ejtip="${full.motoristaCoberturaId || ''}">${data || ''}</span>`;
                                } catch (error) {
                                    Alerta.TratamentoErroComLinha("LotacaoMotoristas.cshtml", "motivo.render", error);
                                    return "";
                                }
                            }
                        },
                        {
                            data: "lotacaoMotoristaId",
