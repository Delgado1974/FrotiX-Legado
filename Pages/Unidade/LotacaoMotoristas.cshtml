@section ScriptsBlock {
    <script>
        // Funções auxiliares para loading - Padrão FrotiX (Overlay)
        function mostrarLoading(mensagem) {
            try {
                $('#txtLoadingMessage').text(mensagem || 'Carregando...');
                var overlay = document.getElementById('loadingOverlayMot');
                if (overlay) {
                    overlay.style.display = 'flex';
                }
            } catch (error) {
                console.warn("Erro ao mostrar loading:", error);
            }
        }

        function esconderLoading() {
            try {
                var overlay = document.getElementById('loadingOverlayMot');
                if (overlay) {
                    overlay.style.display = 'none';
                }
            } catch (error) {
                console.warn("Erro ao esconder loading:", error);
            }
        }

        function ListaTblLotacoes(motoristaId) {
            try {
                // Mostrar loading padrão FrotiX
                mostrarLoading('Carregando Lotações do Motorista...');

                // Destruir DataTable de forma segura usando variável global
                if (dataTableLotacao !== null) {
                    try {
                        dataTableLotacao.clear().draw();
                        dataTableLotacao.destroy();
                        dataTableLotacao = null;
                    } catch (e) {
                        console.warn("DataTable destroy warning:", e);
                    }
                }
                
                // Limpar tbody
                $('#tblLotacao tbody').empty();

                dataTableLotacao = $('#tblLotacao').DataTable({
                    select: {
                        style: 'multi',
                        selector: 'td:first-child'
                    },
                    autoWidth: false,
                    dom: 'Bfrtip',
                    lengthMenu: [
                        [10, 25, 50, -1],
                        ['10 linhas', '25 linhas', '50 linhas', 'Todas as Linhas']
                    ],
                    buttons: ['pageLength', 'excel', { extend: 'pdfHtml5', orientation: 'landscape', pageSize: 'LEGAL' }],
                    order: [],
                    columnDefs: [
                        { targets: 0, className: "text-left", width: "35%" },
                        { targets: 1, className: "text-center", width: "10%" },
                        { targets: 2, className: "text-center", width: "10%" },
                        { targets: 3, className: "text-center", width: "10%" },
                        { targets: 4, className: "text-center", width: "15%" },
                        { targets: 5, className: "text-center", width: "20%" },
                        { targets: 6, className: "text-center", width: "1%", visible: false },
                        { targets: 7, className: "text-center", width: "1%", visible: false },
                        { targets: 8, className: "text-center", width: "1%", visible: false }
