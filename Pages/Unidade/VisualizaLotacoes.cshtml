<script>
    let categoriaId = null;
    var dataTableLotacao = null;

    function onCreate() {
        try {
            // Função onCreate do RichTextEditor
        } catch (error) {
            Alerta.TratamentoErroComLinha("VisualizaLotacoes.cshtml", "onCreate", error);
        }
    }

    function onCategoriaChange() {
        try {
            const categorias = document.getElementById('lstCategorias').ej2_instances[0];
            if (categorias && categorias.value) {
                categoriaId = categorias.value;
                ListaTblLotacoes(categoriaId);
            } else {
                // Destruir DataTable de forma segura
                if (dataTableLotacao !== null) {
                    try {
                        dataTableLotacao.clear().draw();
                        dataTableLotacao.destroy();
                        dataTableLotacao = null;
                    } catch (e) {
                        console.warn("DataTable destroy warning:", e);
                    }
                }
                $('#tblLotacao tbody').empty();
            }
        } catch (error) {
            Alerta.TratamentoErroComLinha("VisualizaLotacoes.cshtml", "onCategoriaChange", error);
        }
    }
</script>

