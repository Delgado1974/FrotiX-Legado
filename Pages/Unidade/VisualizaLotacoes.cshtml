                        } catch (error) {
                            Alerta.TratamentoErroComLinha("VisualizaLotacoes.cshtml", "RemoveMotorista.success", error);
                        }
                    },
                    error: function (data) {
                        try {
                            AppToast.show("Vermelho", "Erro ao finalizar lotação", 2000);
