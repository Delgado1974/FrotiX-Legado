<script>
    function stopEnterSubmitting(e) {
        try {
            // Evita submit ao pressionar Enter fora de DIVs (ex.: inputs/selects)
            if (e.key === 'Enter') {
                const src = e.target || e.srcElement;
                if (src && src.tagName && src.tagName.toLowerCase() !== 'div') {
                    e.preventDefault();
                    return false;
                }
            }
        } catch (error) {
            Alerta.TratamentoErroComLinha("PBIViagens.cshtml", "stopEnterSubmitting", error);
        }
    }
</script>

<form method="post"
