<script>
    function calculate(args) {
        try {
            if (args === undefined) return;

            try {
                var valorunitario = args.data.valorunitario;
                var quantidade = args.data.quantidade;

                valorunitario = brToFloat(valorunitario);
                quantidade = brToFloat(quantidade);

                var valortotal = valorunitario * quantidade;

                if (args.column.headerText == "Valor Total") {
                    $(args.cell).text(floatToBR(valortotal));
                }

                var gridObj = document.getElementById('grdVeiculos').ej2_instances[0];
                var rows = gridObj.getRows();
                var totalGrid = 0;

                for (var i = 0; i < rows.length; i++) {
                    var qtdCell = gridObj.getRows()[i].cells[2];
                    var valCell = gridObj.getRows()[i].cells[3];
                    if (!qtdCell || !valCell) continue;

                    var qtd = brToFloat(qtdCell.innerText);
                    var val = brToFloat(valCell.innerText);
                    totalGrid += (val * qtd);
                }

                $("#txtTotal").val(floatToBR(totalGrid));
            } catch (error) {
                Alerta.TratamentoErroComLinha("Upsert.cshtml", "calculate.inner", error);
            }
        } catch (error) {
            Alerta.TratamentoErroComLinha("Upsert.cshtml", "calculate", error);
        }
    }
</script>

