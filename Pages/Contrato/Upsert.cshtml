@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model FrotiX.Pages.Contrato.UpsertModel

@{
    ViewData["Title"] = "Contratos";
    ViewData["PageName"] = "contrato_upsert";
    ViewData["Heading"] = "<i class='fa-duotone fa-folders'></i> Cadastros: <span class='fw-300'>Contratos</span>";
    ViewData["Category1"] = "Cadastros";
    ViewData["PageIcon"] = "fa-duotone fa-folders";

    var isEdit = Model.ContratoObj.Contrato.ContratoId != Guid.Empty;
    var tituloCard = isEdit ? "Atualizar Contrato" : "Novo Contrato";
}

<style>
    /* ===== CARD FROTIX - CONTRATOS ===== */
    /* Header usa o padrão global .ftx-card-header do frotix.css */

    .ftx-card-contrato {
        border: none;
        border-radius: 14px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        background: #fff;
        margin-bottom: 1.5rem;
    }

    .ftx-card-contrato .ftx-card-body {
        padding: 1.5rem;
        background: linear-gradient(180deg, #fafafa 0%, #ffffff 100%);
    }

    /* ===== SEÇÕES DO FORMULÁRIO ===== */
    .ftx-form-section {
        background: #fff;
        border-radius: 10px;
        padding: 1.25rem;
        margin-bottom: 1rem;
        border: 1px solid rgba(50, 93, 136, 0.1);
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }

    .ftx-form-section-title {
        font-family: 'Outfit', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        color: #325d88;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid rgba(50, 93, 136, 0.15);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .ftx-form-section-title i {
        font-size: 1.1rem;
        --fa-primary-color: #325d88;
        --fa-secondary-color: #6b9bc3;
        --fa-secondary-opacity: 0.7;
    }

    /* ===== LABELS E INPUTS ===== */
    .label {
        margin-bottom: -5px;
        margin-top: 10px;
        font-weight: 600;
        color: #2d3748;
        font-size: 0.85rem;
    }

    .form-control-xs {
        height: calc(1em + .775rem + 2px) !important;
        padding: .125rem .5rem !important;
        font-size: .85rem !important;
        line-height: 1.5;
        border-radius: .35rem;
        border: 1px solid #cbd5e0;
        transition: all 0.2s ease;
    }

    .form-control-xs:focus {
        border-color: #325d88;
        box-shadow: 0 0 0 3px rgba(50, 93, 136, 0.15);
    }

    /* ===== CHECKBOX ESTILIZADO ===== */
    input[type=checkbox] {
        vertical-align: middle;
        position: relative;
        bottom: 1px;
        accent-color: #325d88;
    }

    /* ===== BOTÕES DE AÇÃO ===== */
    .ftx-btn-action {
        border-radius: 8px;
        padding: 0.65rem 1.5rem;
        font-family: 'Outfit', sans-serif;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        border: none;
        min-height: 44px;
    }

    .ftx-btn-action i {
        font-size: 1rem;
    }

    .ftx-btn-action.btn-azul {
        background: linear-gradient(135deg, #325d88 0%, #3d6f9e 100%);
        color: #fff;
        box-shadow: 0 4px 12px rgba(50, 93, 136, 0.3);
    }

    .ftx-btn-action.btn-azul:hover {
        background: linear-gradient(135deg, #2a4f75 0%, #325d88 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(50, 93, 136, 0.4);
    }

    .ftx-btn-action.btn-vinho {
        background: linear-gradient(135deg, #722F37 0%, #8B3A44 100%);
        color: #fff;
        box-shadow: 0 4px 12px rgba(114, 47, 55, 0.3);
    }

    .ftx-btn-action.btn-vinho:hover {
        background: linear-gradient(135deg, #5a252c 0%, #722F37 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(114, 47, 55, 0.4);
    }

    /* Gap para flex containers */
    .gap-2 {
        gap: 0.75rem !important;
    }

    /* Seção de Ações (última seção) */
    .ftx-form-section:last-of-type {
        background: linear-gradient(180deg, #f8fafc 0%, #fff 100%);
        border: 1px solid rgba(50, 93, 136, 0.15);
        margin-bottom: 0;
    }

    /* ===== GRID SYNCFUSION ===== */
    .e-grid * { font-size: 12px !important; }
    .disable-element { pointer-events: none; opacity: 0.4; }
    .wrapper { cursor: not-allowed; }

    /* Grid dentro das seções */
    .ftx-form-section .e-grid {
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #e2e8f0;
    }

    .ftx-form-section .e-grid .e-toolbar {
        background: #f8fafc;
        border-bottom: 1px solid #e2e8f0;
    }

    /* Seção de Veículos quando visível */
    #divVeiculosAdd.ftx-form-section,
    #divVeiculosEdit.ftx-form-section {
        margin-top: 0;
    }

    /* Linha do Total e botão Atualizar */
    #divVeiculosAdd .row.mt-3,
    #divVeiculosEdit .row.mt-3 {
        align-items: flex-end;
        margin-top: 1rem !important;
    }

    /* ===== TERCEIRIZAÇÃO SECTION ===== */
    .ftx-terceirizacao-card {
        background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
        border-radius: 10px;
        padding: 1rem;
        border: 1px solid #e2e8f0;
    }

    .ftx-terceirizacao-card label {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    /* ===== RESPONSIVIDADE ===== */
    @@media (max-width: 768px) {
        .ftx-card-contrato .ftx-card-body {
            padding: 1rem;
        }
    }
</style>

@section HeadBlock {
	<style>
/* ======== OUTLINE BRANCO NO BOTÃO DO HEADER (Padrão FrotiX) ======== */
		.ftx-card-header .btn-fundo-laranja {
			outline: 2px solid rgba(255, 255, 255, 0.5) !important;
			outline-offset: 1px;
			transition: all 0.2s ease;
		}

		.ftx-card-header .btn-fundo-laranja:hover {
			outline: 2px solid rgba(255, 255, 255, 0.8) !important;
			outline-offset: 2px;
		}

	</style>
}

<form method="post" asp-action="Upsert">
    <div class="row">
        <div class="col-xl-12">
            <!-- Card FrotiX -->
            <div class="ftx-card-contrato">
                <!-- Header do Card - Usa padrão global ftx-card-header -->
                <div class="ftx-card-header">
                    <h2 class="titulo-paginas">
                        <i class="fa-duotone fa-file-contract"></i>
                        @tituloCard
                    </h2>
                    <div class="ftx-card-actions">
                        <a asp-page="./Index" class="btn btn-fundo-laranja" data-ftx-loading>
                            <i class="fa-duotone fa-arrow-left icon-pulse me-1"></i>
                            Voltar à Lista
                        </a>
                    </div>
                </div>

                <!-- Body do Card -->
                <div class="ftx-card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="ContratoObj.Contrato.ContratoId" />
                    }

                    <!-- Seção: Identificação do Contrato -->
                    <div class="ftx-form-section">
                        <div class="ftx-form-section-title">
                            <i class="fa-duotone fa-id-card"></i>
                            Identificação do Contrato
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.AnoContrato"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.AnoContrato"></span>
                                    <input id="txtAno" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.AnoContrato" placeholder="Ex: 2024" />
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.NumeroContrato"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.NumeroContrato"></span>
                                    <input id="txtNumeroContrato" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.NumeroContrato" placeholder="Ex: 001" />
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.NumeroProcesso"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.NumeroProcesso"></span>
                                    <input id="txtNumeroProcesso" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.NumeroProcesso" placeholder="Ex: 12345" />
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.AnoProcesso"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.AnoProcesso"></span>
                                    <input id="txtAnoProcesso" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.AnoProcesso" placeholder="Ex: 2024" />
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.Vigencia"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.Vigencia"></span>
                                    <select id="lstVigencia" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.Vigencia">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.Prorrogacao"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.Prorrogacao"></span>
                                    <select id="lstProrrogacao" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.Prorrogacao">
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Seção: Fornecedor e Objeto -->
                    <div class="ftx-form-section">
                        <div class="ftx-form-section-title">
                            <i class="fa-duotone fa-building"></i>
                            Fornecedor e Objeto
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.FornecedorId"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.FornecedorId"></span>
                                    @Html.DropDownListFor(m => m.ContratoObj.Contrato.FornecedorId,
                                        Model.ContratoObj.FornecedorList,
                                        "- Selecione um Fornecedor -",
                                        new { @class = "form-control form-control-xs", @Name = "lstFornecedor" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.Objeto"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.Objeto"></span>
                                    <input id="lstObjeto" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.Objeto" placeholder="Descrição do objeto do contrato" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Seção: Detalhes do Contrato -->
                    <div class="ftx-form-section">
                        <div class="ftx-form-section-title">
                            <i class="fa-duotone fa-calendar-lines-pen"></i>
                            Detalhes do Contrato
                        </div>
                        <div class="row">
                            <div id="divTipoContrato" class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.TipoContrato"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.TipoContrato"></span>
                                    <select id="lstTipoContrato" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.TipoContrato">
                                        <option value="">-- Tipo Contrato --</option>
                                        <option value="Serviços">Serviços</option>
                                        <option value="Terceirização">Terceirização</option>
                                        <option value="Locação">Locação</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.DataInicio"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.DataInicio"></span>
                                    <input id="txtDataInicio" class="form-control form-control-xs" type="date" asp-for="ContratoObj.Contrato.DataInicio" />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="label" asp-for="ContratoObj.Contrato.DataFim"></label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.DataFim"></span>
                                    <input id="txtDataFim" class="form-control form-control-xs" type="date" asp-for="ContratoObj.Contrato.DataFim" />
                                </div>
                            </div>
                            <div class="col-md-3 col-sm-6">
                                <div class="form-group">
                                    <label class="label" id="lblValor">Valor (R$)</label>
                                    <span class="text-danger" asp-validation-for="ContratoObj.Contrato.Valor"></span>
                                    <input id="valor" class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" asp-for="ContratoObj.Contrato.Valor" onKeyPress="return(moeda(this,'.',',',event))" />
                                </div>
                            </div>
                        </div>

                        <!-- Lista de Repactuações (exibido apenas em edição) -->
                        <div id="divListaRepactuacoes" class="row mt-3" style="display:none">
                            <div class="col-md-6">
                                <label class="label">Selecione uma Repactuação para ver os Itens</label>
                                <select id="lstRepactuacao" name="lstRepactuacao" class="form-control form-control-xs">
                                    <option value="">-- Selecione uma Repactuação --</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Seção: Terceirização (condicional) -->
                    <div id="divTerceirizacao" class="ftx-form-section" style="display:none">
                        <div class="ftx-form-section-title">
                            <i class="fa-duotone fa-users-gear"></i>
                            Configuração de Terceirização
                        </div>
                        <div class="row">
                            <!-- Encarregados -->
                            <div class="col-md-3">
                                <div class="ftx-terceirizacao-card">
                                    @if (!isEdit)
                                    {
                                        <label id="lblencarregados" class="label">
                                            <div>
                                                <input id="chkencarregados" type="checkbox" class="form-check-input" asp-for="ContratoObj.Contrato.ContratoEncarregados" />
                                                <strong>Encarregados</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input id="CustoMensalEncarregados" disabled class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" asp-for="ContratoObj.Contrato.CustoMensalEncarregado" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted">Qtd.</small>
                                                    <input id="txtQtdEncarregados" disabled class="form-control form-control-xs" asp-for="ContratoObj.Contrato.QuantidadeEncarregado" style="text-align: right;" />
                                                </div>
                                            </div>
                                        </label>
                                    }
                                    else if (Model.ContratoObj.Contrato.TipoContrato == "Terceirização")
                                    {
                                        <label id="lblencarregados" class="label">
                                            <div>
                                                <input disabled id="chkencarregados" type="checkbox" class="form-check-input" />
                                                <strong>Encarregados</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input disabled id="CustoMensalEncarregados" class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted">Qtd.</small>
                                                    <input disabled id="txtQtdEncarregados" class="form-control form-control-xs" style="text-align: right;" />
                                                </div>
                                            </div>
                                        </label>
                                    }
                                </div>
                            </div>

                            <!-- Operadores -->
                            <div class="col-md-3">
                                <div class="ftx-terceirizacao-card">
                                    @if (!isEdit)
                                    {
                                        <label id="lbloperadores" class="label">
                                            <div>
                                                <input disabled id="chkoperadores" type="checkbox" class="form-check-input" asp-for="ContratoObj.Contrato.ContratoOperadores" />
                                                <strong>Operadores</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input id="CustoMensalOperadores" disabled class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" asp-for="ContratoObj.Contrato.CustoMensalOperador" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted">Qtd.</small>
                                                    <input id="txtQtdOperadores" disabled class="form-control form-control-xs" asp-for="ContratoObj.Contrato.QuantidadeOperador" style="text-align: right;" />
                                                </div>
                                            </div>
                                        </label>
                                    }
                                    else if (Model.ContratoObj.Contrato.TipoContrato == "Terceirização")
                                    {
                                        <label id="lbloperadores" class="label">
                                            <div>
                                                <input disabled id="chkoperadores" type="checkbox" class="form-check-input" />
                                                <strong>Operadores</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input disabled id="CustoMensalOperadores" class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted">Qtd.</small>
                                                    <input disabled id="txtQtdOperadores" class="form-control form-control-xs" style="text-align: right;" />
                                                </div>
                                            </div>
                                        </label>
                                    }
                                </div>
                            </div>

                            <!-- Motoristas -->
                            <div class="col-md-3">
                                <div class="ftx-terceirizacao-card">
                                    @if (!isEdit)
                                    {
                                        <label id="lblmotoristas" class="label">
                                            <div>
                                                <input disabled id="chkmotoristas" type="checkbox" class="form-check-input" asp-for="ContratoObj.Contrato.ContratoMotoristas" />
                                                <strong>Motoristas</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input disabled id="CustoMensalMotoristas" class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" asp-for="ContratoObj.Contrato.CustoMensalMotorista" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted">Qtd.</small>
                                                    <input disabled id="txtQtdMotoristas" class="form-control form-control-xs" asp-for="ContratoObj.Contrato.QuantidadeMotorista" style="text-align: right;" />
                                                </div>
                                            </div>
                                        </label>
                                    }
                                    else if (Model.ContratoObj.Contrato.TipoContrato == "Terceirização")
                                    {
                                        <label id="lblmotoristas" class="label">
                                            <div>
                                                <input disabled id="chkmotoristas" type="checkbox" class="form-check-input" />
                                                <strong>Motoristas</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input disabled id="CustoMensalMotoristas" class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
                                                <div class="col-4">
                                                    <small class="text-muted">Qtd.</small>
                                                    <input disabled id="txtQtdMotoristas" class="form-control form-control-xs" style="text-align: right;" />
                                                </div>
                                            </div>
                                        </label>
                                    }
                                </div>
                            </div>

                            <!-- Lavadores -->
                            <div class="col-md-3">
                                <div class="ftx-terceirizacao-card">
                                    @if (!isEdit)
                                    {
                                        <label id="lbllavadores" class="label">
                                            <div>
                                                <input id="chklavadores" type="checkbox" class="form-check-input" asp-for="ContratoObj.Contrato.ContratoLavadores" />
                                                <strong>Lavadores</strong>
                                            </div>
                                            <div class="row mt-2">
                                                <div class="col-8">
                                                    <small class="text-muted">Custo Mensal (R$)</small>
                                                    <input id="CustoMensalLavadores" disabled class="form-control form-control-xs" data-inputmask="'alias': 'currency'" style="text-align: right;" asp-for="ContratoObj.Contrato.CustoMensalLavador" onKeyPress="return(moeda(this,'.',',',event))" />
                                                </div>
