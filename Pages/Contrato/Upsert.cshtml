                    AtualizaTotal();
                } catch (error) {
                    Alerta.TratamentoErroComLinha("Upsert.cshtml", "btnAtualizaTotal.click", error);
                }
            });
        }

        function AtualizaTotal() {
            try {
                var gridObj = document.getElementById('grdVeiculos').ej2_instances[0];
                var getRows = gridObj.getRows();
                var valortotalgrid = 0;

                for (var i = 0; i < getRows.length; i++) {
                    var qtd = brToFloat(gridObj.getRows()[i].cells[2].innerHTML);
                    var val = brToFloat(gridObj.getRows()[i].cells[3].innerHTML);
                    valortotalgrid += (val * qtd);
                }

                var valortotalgeral = valortotalgrid;
                $("#txtTotal").val(floatToBR(valortotalgeral));
            } catch (error) {
                Alerta.TratamentoErroComLinha("Upsert.cshtml", "AtualizaTotal", error);
            }
        }
