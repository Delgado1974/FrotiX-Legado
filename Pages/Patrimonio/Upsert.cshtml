@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model FrotiX.Pages.Patrimonio.UpsertModel
@using Syncfusion.Blazor.Inputs

@{
	ViewData["Title"] = "Patrimônio";
	ViewData["PageName"] = "patrimonio_upsert";
	ViewData["Heading"] = "<i class='fa-sharp-duotone fa-duotone fa-arrows-turn-to-dots'></i> Cadastros: <span class='fw-300'>Patrimônio</span>";
	ViewData["Category1"] = "Cadastros";
	ViewData["PageIcon"] = "fa-duotone fa-arrows-turn-to-dots";
}

<style>
	.form-control-xs {
		height: calc(1em + .775rem + 2px) !important;
		padding: .125rem .25rem !important;
		font-size: .75rem !important;
		line-height: 1.5;
		border-radius: .2rem;
	}

	.label {
		margin-bottom: -5px;
		margin-top: 10px;
	}

	input[type=checkbox] {
		vertical-align: middle;
		position: relative;
		bottom: 1px;
	}

	.escondido {
		display: none;
	}

	.espacofundo {
		padding-bottom: 20px;
	}

	#dropArea {
		border: 1px dashed #c3c3cc;
		text-align: center;
		padding: 20px;
	}

	.control_wrapper {
		max-width: 500px;
		margin: auto;
	}

	img#previewImage {
		margin-top: 20px;
		max-width: 100%;
		width: 300px;
		height: auto;
		display: block;
	}
</style>

@section HeadBlock {
	<link rel="stylesheet" href="~/css/dropify.min.css" />
}

@{
	var patrimonioId = Model.PatrimonioObj?.PatrimonioId.ToString() ?? "00000000-0000-0000-0000-000000000000";
}

<form id="formsPatrimonio" method="post" asp-action="Upsert" onkeypress='stopEnterSubmitting(window.event)' enctype="multipart/form-data">
	<div class="row espacofundo">
		<div class="col-xl-12">
			<div id="panel-1" class="panel">
				<div id="painelfundo" class="panel-container show espacofundo">
					<div class="panel-content">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div id="divPatrimonioIdEmpty" data-patrimonioid="@patrimonioId"></div>

						@if (Model.PatrimonioObj.PatrimonioId != Guid.Empty)
						{
							<input type="hidden" id="PatrimonioId" name="PatrimonioObj.PatrimonioId" value="@Model.PatrimonioObj.PatrimonioId" />
							<input type="hidden" id="MarcaId" value="@Model.PatrimonioObj.Patrimonio.Marca" />
							<input type="hidden" id="ModeloId" value="@Model.PatrimonioObj.Patrimonio.Modelo" />
							<input type="hidden" id="SetorId" value="@Model.PatrimonioObj.Patrimonio.SetorId" />
							<input type="hidden" id="SecaoId" value="@Model.PatrimonioObj.Patrimonio.SecaoId" />
							<input type="hidden" id="SituacaoId" value="@Model.PatrimonioObj.Patrimonio.Situacao" />
						}

						<div class="col-12 px-3" style="border-bottom:1px solid #325d88">
							<h2 class="titulo-pagina">
								<i class="fa-duotone fa-shelves"></i>
								&nbsp;@(Model.PatrimonioObj.Patrimonio.PatrimonioId != Guid.Empty ? "Atualizar" : "Criar")&nbsp;Patrimônio
							</h2>
						</div>

						<div class="col-12 pt-3">
							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.NPR"></label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.NPR"></span>
										<input class="form-control form-control-sm" asp-for="PatrimonioObj.Patrimonio.NPR" pattern="^\d+(\.\d+)?$" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.Marca"></label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.Marca"></span>
										<div class="d-flex align-items-center">
											<ejs-combobox id="cmbMarcas"
														  placeholder="Selecione/Insira uma Marca"
														  allowFiltering="true"
														  filterType="Contains"
														  popupHeight="200px"
														  width="100%"
														  showClearButton="true"
														  allowCustom="true"
														  change="onMarcaChange"
														  ejs-for="PatrimonioObj.Patrimonio.Marca"
														  style="flex: 1;">
												<e-combobox-fields text="text" value="value"></e-combobox-fields>
											</ejs-combobox>
											<button type="button"
													id="btnAddMarca"
													class="btn btn-azul btn-sm ml-2"
													style="width: 35px; height: 35px; padding: 0;"
													data-ejtip="Adicionar Nova Marca">
												<i class="fa-duotone fa-rectangle-history-circle-plus"></i>
											</button>
										</div>
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.Modelo"></label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.Modelo"></span>
										<div class="d-flex align-items-center">
											<ejs-combobox id="cmbModelos"
														  placeholder="Selecione/Insira um Modelo"
														  allowFiltering="true"
														  filterType="Contains"
														  popupHeight="200px"
														  width="100%"
														  showClearButton="true"
														  allowCustom="true"
														  ejs-for="PatrimonioObj.Patrimonio.Modelo"
														  style="flex: 1;">
												<e-combobox-fields text="text" value="value"></e-combobox-fields>
											</ejs-combobox>
											<button type="button"
													id="btnAddModelo"
													class="btn btn-azul btn-sm ml-2"
													style="width: 35px; height: 35px; padding: 0;"
													data-ejtip="Adicionar Novo Modelo"
													disabled>
												<i class="fa-duotone fa-rectangle-history-circle-plus"></i>
											</button>
										</div>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-4">
									<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.SetorId">Setor</label>
									<ejs-combobox id="cmbSetores"
												  placeholder="Selecione um Setor"
												  allowFiltering="true"
												  filterType="Contains"
												  popupHeight="200px"
												  width="100%"
												  showClearButton="true"
												  ejs-for="PatrimonioObj.Patrimonio.SetorId">
										<e-combobox-fields text="text" value="value"></e-combobox-fields>
									</ejs-combobox>
								</div>

								<div class="col-4 form-group" id="divSecao">
									<label class="label font-weight-bold">Seção</label>
									<ejs-combobox id="cmbSecoes"
												  placeholder="Selecione uma Seção"
												  allowFiltering="true"
												  filterType="Contains"
												  popupHeight="200px"
												  width="100%"
												  showClearButton="true"
												  ejs-for="PatrimonioObj.Patrimonio.SecaoId">
										<e-combobox-fields text="text" value="value"></e-combobox-fields>
									</ejs-combobox>
								</div>

								<div class="col-2">
									<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.DataEntrada">Data de Entrada</label>
									<ejs-datepicker id="txtDataEntrada"
													ejs-for="PatrimonioObj.Patrimonio.DataEntrada"
													format="dd/MM/yyyy"
													placeholder="dd/mm/aaaa"
													locale="pt-BR"
													width="100%"></ejs-datepicker>
								</div>

								<div class="col-2">
									<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.DataSaida">Data de Baixa</label>
									<ejs-datepicker id="txtDataBaixa"
													ejs-for="PatrimonioObj.Patrimonio.DataSaida"
													format="dd/MM/yyyy"
													placeholder="dd/mm/aaaa"
													locale="pt-BR"
													width="100%"
													max="@DateTime.Today.AddYears(5)"></ejs-datepicker>
								</div>
							</div>

							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.Descricao">Descrição</label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.Descricao"></span>
										<input class="form-control form-control-sm" asp-for="PatrimonioObj.Patrimonio.Descricao" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.NumeroSerie">Numero de Série</label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.NumeroSerie"></span>
										<input class="form-control form-control-sm" asp-for="PatrimonioObj.Patrimonio.NumeroSerie" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.Situacao">Situação</label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.Situacao"></span>
										<ejs-dropdownlist id="cmbSituacao"
														  placeholder="Selecione a Situação"
														  popupHeight="200px"
														  width="100%"
														  showClearButton="true"
														  ejs-for="PatrimonioObj.Patrimonio.Situacao">
											<e-dropdownlist-fields text="text" value="value"></e-dropdownlist-fields>
										</ejs-dropdownlist>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-12">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="PatrimonioObj.Patrimonio.LocalizacaoAtual">Localização Atual</label>
										<span class="text-danger font-weight-light" asp-validation-for="PatrimonioObj.Patrimonio.LocalizacaoAtual"></span>
										<ejs-textbox id="localizacaoAtual"
													 cssClass="my-syncfusion-input--small"
													 ejs-for="@Model.PatrimonioObj.Patrimonio.LocalizacaoAtual"
													 placeholder="Digite a Localização Atual do Patrimônio">
										</ejs-textbox>
									</div>
								</div>
							</div>

							<br />

							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold">
											<input type="checkbox" class="form-check-input" asp-for="PatrimonioObj.Patrimonio.Status" id="chkStatus" style="display: none;" />
											Status (Ativo/Baixado)
										</label>
									</div>
								</div>
							</div>

							<br />
							<br />

							<div class="row">
								<div class="col-lg-8 control-section">
									<label class="label font-weight-bold">Imagem (foto) do Patrimônio</label>
									<div id="dropArea" style="height: auto; width:400px; overflow: auto;">
										<ejs-uploader id="fileUpload"
													  allowedExtensions=".jpg,.jpeg,.png"
													  selected="onFileSelect"
													  removing="onFileRemove"
													  name="UploadedFile">
										</ejs-uploader>
									</div>
								</div>

								<img id="previewImage" src="@Model.PatrimonioObj.Patrimonio.ImageUrl"
									 width="100" heigth="100" style="display:@(string.IsNullOrEmpty(Model.PatrimonioObj.Patrimonio.ImageUrl) ? "none" : "block");" />
							</div>

							<div class="mb-4"></div>

							<div class="form-group row">
								<div class="col-12">
									<div class="row float-left">
										<div class="col-6 float-left">
											@if (Model.PatrimonioObj.Patrimonio.PatrimonioId != Guid.Empty)
											{
												<button method="post" asp-page-handler="Edit" asp-route-id="@Model.PatrimonioObj.Patrimonio.PatrimonioId" asp-route-npratual="@Model.PatrimonioObj.Patrimonio.NPR" class="btn btn-azul form-control" style="width:300px" data-ejtip="Atualizar os dados do patrimônio">
													<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
													Atualizar
												</button>
											}
											else
											{
												<button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-azul form-control" style="width:300px" data-ejtip="Criar novo patrimônio">
													<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
													Criar
												</button>
											}
										</div>
										<div class="col-6 float-right">
											<a asp-page="./Index" class="btn btn-vinho form-control" style="width:300px" data-ejtip="Voltar para a lista de patrimônios">
												<i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i>
												&nbsp;&nbsp;Voltar à Lista
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal Nova Marca -->
	<div class="modal fade" id="modalNovaMarca" tabindex="-1" aria-labelledby="modalNovaMarcaLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header modal-header-azul">
					<h5 class="modal-title" id="modalNovaMarcaLabel">
						<i class="fa-duotone fa-tag"></i> Adicionar Nova Marca
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body" style="padding: 20px;">
					<div class="form-group">
						<label for="inputNovaMarca" class="font-weight-bold">Nome da Marca:</label>
						<input type="text"
							   class="form-control"
							   id="inputNovaMarca"
							   placeholder="Digite o nome da nova marca"
							   maxlength="30">
						<small class="form-text text-muted">Máximo 30 caracteres</small>
						<div class="invalid-feedback" id="marcaErrorMsg"></div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-vinho" data-bs-dismiss="modal">
						<i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i>
						Cancelar
					</button>
					<button type="button" class="btn btn-azul" onclick="salvarNovaMarca()">
						<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
						Salvar Marca
					</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal Novo Modelo -->
	<div class="modal fade" id="modalNovoModelo" tabindex="-1" aria-labelledby="modalNovoModeloLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header modal-header-azul">
					<h5 class="modal-title" id="modalNovoModeloLabel">
						<i class="fa-duotone fa-cube"></i> Adicionar Novo Modelo
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body" style="padding: 20px;">
					<div class="form-group mb-3">
						<label class="font-weight-bold">Marca Selecionada:</label>
						<input type="text"
							   class="form-control-plaintext"
							   id="marcaSelecionadaModelo"
							   readonly>
					</div>
					<div class="form-group">
						<label for="inputNovoModelo" class="font-weight-bold">Nome do Modelo:</label>
						<input type="text"
							   class="form-control"
							   id="inputNovoModelo"
							   placeholder="Digite o nome do novo modelo"
							   maxlength="30">
						<small class="form-text text-muted">Máximo 30 caracteres</small>
						<div class="invalid-feedback" id="modeloErrorMsg"></div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-vinho" data-bs-dismiss="modal">
						<i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i>
						Cancelar
					</button>
					<button type="button" class="btn btn-azul" onclick="salvarNovoModelo()">
						<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
						Salvar Modelo
					</button>
				</div>
			</div>
		</div>
	</div>
</form>

@section ScriptsBlock {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

	<script src="~/js/dropify.min.js"></script>
	<script src="~/js/cadastros/patrimonio.js" asp-append-version="true"></script>
	<script src="~/css/patrimonio.css" asp-append-version="true"></script>

}
