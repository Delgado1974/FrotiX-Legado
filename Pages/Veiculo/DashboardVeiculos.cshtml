@page
@model FrotiX.Pages.Veiculo.DashboardVeiculosModel
@{
    ViewData["Title"] = "Dashboard de Veículos";
    ViewData["PageName"] = "veiculo_dashboardveiculos";
    ViewData["Heading"] = "<i class='fa-duotone fa-cars'></i> Dashboard: <span class='fw-300'>Veículos</span>";
    ViewData["Category1"] = "Dashboards";
    ViewData["PageIcon"] = "fa-duotone fa-chart-line";
}

@section HeadBlock {
<style>
    /* ========================================
       PALETA DE CORES - TEMA VERDE SAGE/OLIVA
       ======================================== */
    :root {
        --veic-primary: #5f8575;
        --veic-secondary: #7aa390;
        --veic-accent: #8fb8a4;
        --veic-dark: #4a6b5c;
        --veic-darker: #3a5548;
        --veic-light: #f0f7f4;
        --veic-cream: #e8f2ed;
        --veic-gradient: linear-gradient(135deg, #5f8575 0%, #7aa390 100%);
    }

    /* Header do Dashboard */
    .header-dashboard-veic {
        background: var(--veic-gradient);
        color: white;
        padding: 20px 24px;
        border-radius: 10px;
        margin-bottom: 24px;
        box-shadow: 0 4px 15px rgba(95, 133, 117, 0.35);
        position: relative;
        overflow: hidden;
    }

    .header-dashboard-veic::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.15), transparent);
        animation: veicHeaderShine 4s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes veicHeaderShine {
        0%, 100% { left: -100%; }
        50% { left: 100%; }
    }

    .header-dashboard-titulo-veic {
        margin: 0;
        font-family: 'Outfit', sans-serif;
        font-weight: 800;
        font-size: 1.75rem;
        display: flex;
        align-items: center;
        gap: 12px;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        position: relative;
        z-index: 1;
    }

    .header-dashboard-titulo-veic i {
        font-size: 1.75rem;
        filter: drop-shadow(0 2px 3px rgba(0, 0, 0, 0.25));
    }

    /* Navegação de Abas */
    .dash-tabs-veic {
        background: white;
        border-radius: 12px;
        padding: 6px;
        margin-bottom: 24px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        display: flex;
        gap: 6px;
    }

    .dash-tab-veic {
        flex: 1;
        padding: 12px 20px;
        border: none;
        background: transparent;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.9rem;
        color: #64748b;
        cursor: pointer;
        transition: all 0.25s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .dash-tab-veic:hover {
        background: var(--veic-light);
        color: var(--veic-dark);
    }

    .dash-tab-veic.active {
        background: var(--veic-gradient);
        color: white;
        box-shadow: 0 4px 12px rgba(95, 133, 117, 0.35);
    }

    .dash-tab-veic i { font-size: 1.1rem; }

    .dash-content-veic {
        display: none !important;
        visibility: hidden;
        position: absolute;
        left: -9999px;
    }

    .dash-content-veic.active {
        display: block !important;
        visibility: visible;
        position: relative;
        left: 0;
        animation: fadeInVeic 0.3s ease;
    }

    @@keyframes fadeInVeic {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Container de Filtros */
    .filter-card-veic {
        background: var(--veic-gradient);
        color: white;
        border-radius: 12px;
        padding: 20px 24px;
        margin-bottom: 24px;
        box-shadow: 0 4px 12px rgba(95, 133, 117, 0.25);
    }

    .filter-card-veic .form-label {
        color: white;
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 6px;
    }

    .filter-card-veic .form-control,
    .filter-card-veic .form-select {
        background: rgba(255,255,255,0.18);
        border: 1px solid rgba(255,255,255,0.35);
        color: white;
        border-radius: 8px;
        font-size: 0.9rem;
        padding: 8px 12px;
    }

    .filter-card-veic .form-control::placeholder { color: rgba(255,255,255,0.7); }

    .filter-card-veic .form-control:focus,
    .filter-card-veic .form-select:focus {
        background: rgba(255,255,255,0.28);
        border-color: rgba(255,255,255,0.6);
        box-shadow: 0 0 0 3px rgba(255,255,255,0.2);
        color: white;
    }

    .filter-card-veic .form-select option {
        background: var(--veic-dark);
        color: white;
    }

    /* Botões de Filtro - Base comum */
    .btn-filtrar-veic, .btn-limpar-veic {
        padding: 8px 20px !important;
        border-radius: 8px !important;
        font-weight: 600 !important;
        font-size: 0.875rem !important;
        line-height: 1.5 !important;
        transition: all 0.3s ease !important;
        box-sizing: border-box !important;
    }

    /* Botão Filtrar */
    .btn-filtrar-veic {
        background: rgba(255,255,255,0.2) !important;
        border: 2px solid rgba(255,255,255,0.5) !important;
        color: white !important;
    }

    .btn-filtrar-veic:hover {
        background: rgba(255,255,255,0.35) !important;
        border-color: white !important;
        transform: translateY(-1px) !important;
    }

    /* Botão Limpar */
    .btn-limpar-veic {
        background: transparent !important;
        border: 2px solid rgba(255,255,255,0.4) !important;
        color: rgba(255,255,255,0.9) !important;
    }

    .btn-limpar-veic:hover {
        background: rgba(255,255,255,0.15) !important;
        border-color: rgba(255,255,255,0.7) !important;
        color: white !important;
    }

    /* Botões de Período Rápido */
    .btn-period-veic {
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.35);
        color: white;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        transition: all 0.25s ease;
        cursor: pointer;
    }

    .btn-period-veic:hover {
        background: rgba(255,255,255,0.3);
        border-color: rgba(255,255,255,0.6);
        transform: scale(1.05);
    }

    .btn-period-veic.active {
        background: white;
        color: var(--veic-dark);
        border-color: white;
        box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }

    /* Indicador de Período Atual */
    .periodo-atual-veic {
        background: rgba(255,255,255,0.15);
        border-radius: 8px;
        padding: 10px 16px;
        font-size: 0.85rem;
        font-weight: 500;
        color: rgba(255,255,255,0.95);
    }

    .periodo-atual-veic i {
        color: rgba(255,255,255,0.8);
    }

    /* Cards de Estatísticas */
    .card-estatistica-veic {
        background: white;
        border-radius: 10px;
        padding: 16px 20px;
        border-left: 4px solid;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        transition: all 0.3s ease;
        height: 100%;
        min-height: 90px;
    }

    .card-estatistica-veic:hover {
        box-shadow: 0 6px 16px rgba(0,0,0,0.1);
        transform: translateY(-3px);
    }

    .card-estatistica-veic.sage { border-left-color: var(--veic-primary); }
    .card-estatistica-veic.olive { border-left-color: var(--veic-dark); }
    .card-estatistica-veic.mint { border-left-color: var(--veic-accent); }
    .card-estatistica-veic.forest { border-left-color: var(--veic-darker); }
    .card-estatistica-veic.teal { border-left-color: #14b8a6; }
    .card-estatistica-veic.emerald { border-left-color: #10b981; }
    .card-estatistica-veic.cyan { border-left-color: #06b6d4; }
    .card-estatistica-veic.amber { border-left-color: #f59e0b; }

    .icone-card-veic {
        font-size: 1.4rem;
        margin-bottom: 8px;
    }

    .card-estatistica-veic.sage .icone-card-veic { color: var(--veic-primary); }
    .card-estatistica-veic.olive .icone-card-veic { color: var(--veic-dark); }
    .card-estatistica-veic.mint .icone-card-veic { color: var(--veic-accent); }
    .card-estatistica-veic.forest .icone-card-veic { color: var(--veic-darker); }
    .card-estatistica-veic.teal .icone-card-veic { color: #14b8a6; }
    .card-estatistica-veic.emerald .icone-card-veic { color: #10b981; }
    .card-estatistica-veic.cyan .icone-card-veic { color: #06b6d4; }
    .card-estatistica-veic.amber .icone-card-veic { color: #f59e0b; }

    .texto-metrica-veic {
        font-size: 0.7rem;
        color: #6B7280;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
    }

    .valor-metrica-veic {
        font-size: 1.5rem;
        font-weight: 800;
        color: #111827;
        line-height: 1.1;
    }

    /* Cards de Gráficos */
    .chart-container-veic {
        background: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        transition: box-shadow 0.3s ease;
        height: 100%;
    }

    .chart-container-veic:hover {
        box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    }

    .chart-title-veic {
        font-size: 0.95rem;
        font-weight: 700;
        margin-bottom: 16px;
        color: #111827;
        display: flex;
        align-items: center;
        gap: 10px;
        padding-bottom: 12px;
        border-bottom: 2px solid var(--veic-cream);
    }

    .chart-title-veic i {
        color: var(--veic-primary);
        font-size: 1.1rem;
    }

    .chart-subtitle {
        font-size: 0.7rem;
        color: #9ca3af;
        font-weight: 400;
        margin-left: auto;
    }

    /* =====================================================
       GRID-TABELAS - Usando DIVs para evitar CSS global de table
       ===================================================== */
    .ftx-grid-tabela-veic {
        width: 100%;
        font-size: 0.8rem;
    }

    .ftx-grid-tabela-veic .grid-header {
        display: grid;
        background: linear-gradient(135deg, #5f8575 0%, #7aa390 100%);
        border-radius: 6px 6px 0 0;
    }

    .ftx-grid-tabela-veic .grid-header-cell {
        color: #ffffff;
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        padding: 10px 12px;
    }

    .ftx-grid-tabela-veic .grid-body {
        max-height: 320px;
        overflow-y: auto;
    }

    .ftx-grid-tabela-veic .grid-row {
        display: grid;
        border-bottom: 1px solid #f3f4f6;
        transition: background-color 0.15s;
    }

    .ftx-grid-tabela-veic .grid-row:hover {
        background-color: var(--veic-light);
    }

    .ftx-grid-tabela-veic .grid-cell {
        padding: 10px 12px;
    }

    .ftx-grid-tabela-veic .text-end {
        text-align: right;
    }

    .ftx-grid-tabela-veic .text-center {
        text-align: center;
    }

    /* Layout 2 colunas */
    .ftx-grid-tabela-veic.cols-2 .grid-header,
    .ftx-grid-tabela-veic.cols-2 .grid-row {
        grid-template-columns: 1fr auto;
    }

    /* Layout 3 colunas */
    .ftx-grid-tabela-veic.cols-3 .grid-header,
    .ftx-grid-tabela-veic.cols-3 .grid-row {
        grid-template-columns: auto 1fr auto;
    }

    /* Layout 4 colunas */
    .ftx-grid-tabela-veic.cols-4 .grid-header,
    .ftx-grid-tabela-veic.cols-4 .grid-row {
        grid-template-columns: auto 1fr auto auto;
    }

    .ftx-grid-tabela-veic .grid-row-total {
        background: var(--veic-cream);
        font-weight: 700;
    }

    /* Badge de Ranking */
    .badge-rank-veic {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        border-radius: 50%;
        background: var(--veic-secondary);
        color: white;
        font-size: 0.7rem;
        font-weight: 700;
        margin-right: 8px;
    }

    .badge-rank-veic.top3 {
        background: var(--veic-primary);
        box-shadow: 0 2px 6px rgba(95, 133, 117, 0.4);
    }

    /* Card Destaque */
    .card-destaque-veic {
        background: linear-gradient(135deg, var(--veic-light) 0%, #e0ebe6 100%);
        border: 1px solid var(--veic-accent);
        border-radius: 8px;
        padding: 16px;
        text-align: center;
        height: 100%;
        min-height: 100px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .card-destaque-veic .destaque-label {
        font-size: 0.7rem;
        color: #6B7280;
        text-transform: uppercase;
        font-weight: 600;
        margin-bottom: 4px;
    }

    .card-destaque-veic .destaque-valor {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--veic-dark);
    }

    .card-destaque-veic .destaque-info {
        font-size: 0.8rem;
        color: var(--veic-primary);
        font-weight: 600;
    }

    /* Tabelas Estatísticas - Estilo específico */
    .table-veic {
        font-size: 0.8rem;
        margin-bottom: 0;
    }

    .table-veic thead {
        background: var(--veic-gradient);
        color: white;
    }

    .table-veic thead th {
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        padding: 10px 12px;
        border: none;
    }

    .table-veic tbody tr:hover {
        background-color: var(--veic-light) !important;
    }

    .table-veic tbody td {
        padding: 8px 12px;
        vertical-align: middle;
    }

    /* Responsividade */
    @@media (max-width: 992px) {
        .valor-metrica-veic { font-size: 1.3rem; }
        .chart-container-veic { margin-bottom: 1rem; }
        .dash-tab-veic { font-size: 0.85rem; padding: 10px 16px; }
        .header-dashboard-titulo-veic { font-size: 1.4rem; }
    }

    @@media (max-width: 768px) {
        .dash-tabs-veic { flex-direction: column; }
        .card-estatistica-veic { margin-bottom: 12px; }
        .header-dashboard-veic { padding: 16px 20px; }
    }
</style>
}

