@page
@model FrotiX.Models.MarcaVeiculo

@{
	ViewData["Title"] = "Marcas de Veículos";
	ViewData["PageName"] = "marcaveiculo_index";
	ViewData["Heading"] = "<i class='fad fa-car-garage'></i> Cadastros: <span class='fw-300'>Marcas de Veículos</span>";
	ViewData["Category1"] = "Cadastros";
	ViewData["PageIcon"] = "fa-regular fa-car-garage";
}

@section HeadBlock {

}

<style>
	.fundo-cinza {
		background-color: #2F4F4F;
		color: aliceblue;
	}

	.label {
		color: white;
	}
</style>

<div class="row">
	<div class="col-xl-12">
		<div id="panel-1" class="panel">
			<div class="panel-container show">


					<div class="header-toolbar">
						<h2 class="titulo-paginas">
							<i class="fa-duotone fa-solid fa-car-bus icon-150"></i>
							Listagem de Marcas de Veículos
						</h2>
						<a href="/MarcaVeiculo/Upsert"
						   class="btn btn-azul form-control flex-shrink-0"
						   style="width: 250px;">
							<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
							Adicionar Nova Marca
						</a>
					</div>

				<div class="panel-content">
					<div class="box-body">
						<br /><br />
						<table id="tblMarcaVeiculo" class="table table-bordered table-striped" width="100%">
							<thead>
								<tr>
									<th>Marca do Veículo</th>
									<th>Status</th>
									<th>Ação</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section ScriptsBlock {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

	<script src="~/js/cadastros/marcaveiculo.js" asp-append-version="true"></script>
}
