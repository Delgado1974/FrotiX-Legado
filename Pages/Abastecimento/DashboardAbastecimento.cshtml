                <div class="chart-card mb-4">
                    <div class="big-stat-card" style="background: linear-gradient(135deg, #dcfce7 0%, #bbf7d0 100%);">
                        <div style="font-size: 0.8rem; font-weight: 600; color: #166534;">Valor total por veículo</div>
                        <div class="big-value" id="valorTotalVeiculo">R$ 0</div>
                    </div>
                </div>

                <!-- Card Litros -->
                <div class="chart-card mb-4">
                    <div class="big-stat-card" style="background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%); border-color: #38bdf8;">
                        <div style="font-size: 0.8rem; font-weight: 600; color: #0369a1;">Consumo de Litros</div>
                        <div class="big-value" style="color: #0c4a6e;" id="litrosTotalVeiculo">0</div>
                    </div>
                </div>

                <!-- Gráfico: Consumo Mensal de Litros -->
                <div class="chart-card" style="min-height: 280px;">
                    <h5 class="chart-title" style="font-size: 0.9rem;">
                        <i class="fa-duotone fa-chart-line"></i>
                        Consumo Mensal de Litros
                    </h5>
                    <div id="chartConsumoMensalVeiculo" style="height: 220px;"></div>
                </div>
            </div>

            <!-- Coluna Central: Info do Veículo e Gráfico Mensal -->
            <div class="col-lg-5">
                <!-- Info do Veículo -->
                <div class="chart-card mb-4">
                    <div class="text-center py-3">
                        <div style="font-size: 0.85rem; color: #64748b;">Descrição do Veículo</div>
                        <h3 id="descricaoVeiculoSelecionado" style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin: 0.5rem 0;">
                            Selecione um veículo
                        </h3>
                        <div style="font-size: 0.85rem; color: #64748b;">Categoria do Veículo</div>
                        <h4 id="categoriaVeiculoSelecionado" style="font-size: 1.25rem; font-weight: 600; color: #374151; margin: 0.25rem 0;">
                            -
                        </h4>
                    </div>
                </div>

                <!-- Gráfico: Valor Total Mensal do Veículo -->
                <div class="chart-card" style="min-height: 400px;">
                    <h5 class="chart-title">
                        <i class="fa-duotone fa-chart-bar"></i>
                        Valor Total Mensal do Veículo
                    </h5>
                    <div id="chartValorMensalVeiculo" style="height: 340px;"></div>
                </div>
            </div>

            <!-- Coluna Direita: Tabela de Veículos -->
            <div class="col-lg-4">
                <div class="chart-card" style="min-height: 540px;">
                    <h5 class="chart-title">
                        <i class="fa-duotone fa-list-ol"></i>
                        Valor Total por Veículo
                    </h5>
                    <div class="table-responsive" style="max-height: 480px; overflow-y: auto;">
                        <table class="table table-sm table-dash mb-0" id="tabelaValorVeiculos">
                            <thead style="position: sticky; top: 0;">
                                <tr>
                                    <th>Veículo</th>
                                    <th class="text-end">Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td colspan="2" class="text-center py-4"><i class="fa-duotone fa-spinner-third fa-spin"></i></td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div><!-- Fecha dash-tabs-container -->
</div>

