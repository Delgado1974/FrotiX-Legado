@page
@model FrotiX.Pages.Abastecimento.DashboardAbastecimentoModel
@{
    ViewData["Title"] = "Dashboard de Abastecimentos";
    ViewData["PageName"] = "abastecimento_dashboard";
    ViewData["Heading"] = "<i class='fad fa-gas-pump'></i> Dashboard: <span class='fw-300'>Abastecimentos</span>";
    ViewData["Category1"] = "Dashboards";
    ViewData["PageIcon"] = "fal fa-chart-line";
}

<style>
    :root {
        --dash-verde-escuro: #166534;
        --dash-verde-medio: #16a34a;
        --dash-verde-claro: #22c55e;
        --dash-verde-bg: #dcfce7;
        --dash-laranja: #ea580c;
        --dash-azul: #0284c7;
        --dash-amarelo: #ca8a04;
        --dash-roxo: #7c3aed;
    }

    /* ====== HEADER DO DASHBOARD ====== */
    .dash-header {
        background: linear-gradient(135deg, #166534 0%, #15803d 50%, #16a34a 100%);
        color: white;
        padding: 1.5rem 2rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 15px rgba(22, 101, 52, 0.3);
    }

    .dash-header h2 {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .dash-header p {
        margin: 0.5rem 0 0 0;
        opacity: 0.9;
        font-size: 0.95rem;
    }

    .dash-header .btn-header {
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.4);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.2s;
    }

    .dash-header .btn-header:hover {
        background: rgba(255,255,255,0.3);
        border-color: rgba(255,255,255,0.6);
        transform: translateY(-2px);
    }

    /* ====== NAVEGAÇÃO DE ABAS ====== */
    .dash-tabs {
        background: white;
        border-radius: 12px;
        padding: 0.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        display: flex;
        gap: 0.5rem;
    }

    .dash-tab {
        flex: 1;
        padding: 1rem 1.5rem;
        border: none;
        background: transparent;
        border-radius: 8px;
        font-weight: 600;
        font-size: 0.95rem;
        color: #64748b;
        cursor: pointer;
        transition: all 0.2s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .dash-tab:hover {
        background: #f1f5f9;
        color: #334155;
    }

    .dash-tab.active {
        background: linear-gradient(135deg, #166534 0%, #16a34a 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(22, 101, 52, 0.3);
    }

    .dash-tab i {
        font-size: 1.1rem;
    }

    /* ====== CONTEÚDO DAS ABAS ====== */
    .dash-content {
        display: none !important;
        visibility: hidden;
        position: absolute;
        left: -9999px;
    }

    .dash-content.active {
        display: block !important;
        visibility: visible;
        position: relative;
        left: 0;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* ====== CARDS DE FILTROS ====== */
    .filter-card-verde {
        background: linear-gradient(135deg, #166534 0%, #15803d 100%);
        color: white;
        border-radius: 12px;
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.5rem;
    }

    .filter-card-verde .form-label {
        color: white;
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .filter-card-verde .form-control,
    .filter-card-verde .form-select {
        background: rgba(255,255,255,0.15);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        border-radius: 6px;
    }

    .filter-card-verde .form-control::placeholder {
        color: rgba(255,255,255,0.7);
    }

    .filter-card-verde .form-control:focus,
    .filter-card-verde .form-select:focus {
        background: rgba(255,255,255,0.25);
        border-color: rgba(255,255,255,0.5);
        box-shadow: 0 0 0 3px rgba(255,255,255,0.15);
        color: white;
    }

    .filter-card-verde .form-select option {
        background: #166534;
        color: white;
    }

    /* ====== CARDS DE ESTATÍSTICAS ====== */
    .stat-card {
        background: white;
        border-radius: 10px;
        padding: 1.25rem;
        border-left: 4px solid;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        transition: all 0.2s;
        height: 100%;
    }

    .stat-card:hover {
        box-shadow: 0 4px 16px rgba(0,0,0,0.1);
        transform: translateY(-2px);
    }

    .stat-card.verde { border-left-color: var(--dash-verde-medio); }
    .stat-card.laranja { border-left-color: var(--dash-laranja); }
    .stat-card.azul { border-left-color: var(--dash-azul); }
    .stat-card.amarelo { border-left-color: var(--dash-amarelo); }
    .stat-card.roxo { border-left-color: var(--dash-roxo); }

    .stat-card .stat-icon {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
    }

    .stat-card.verde .stat-icon { color: var(--dash-verde-medio); }
    .stat-card.laranja .stat-icon { color: var(--dash-laranja); }
    .stat-card.azul .stat-icon { color: var(--dash-azul); }
    .stat-card.amarelo .stat-icon { color: var(--dash-amarelo); }
    .stat-card.roxo .stat-icon { color: var(--dash-roxo); }

    .stat-card .stat-label {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        color: #64748b;
        margin-bottom: 0.5rem;
    }

    .stat-card .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e293b;
        line-height: 1.2;
    }

    .stat-card .stat-value.small {
        font-size: 1.25rem;
    }

    /* ====== CARD DE DESTAQUE (BIG NUMBER) ====== */
    .big-stat-card {
        background: linear-gradient(135deg, var(--dash-verde-bg) 0%, #bbf7d0 100%);
        border: 2px solid var(--dash-verde-claro);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
    }

    .big-stat-card .big-value {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--dash-verde-escuro);
        line-height: 1.1;
    }

    .big-stat-card .big-label {
        font-size: 0.9rem;
        font-weight: 600;
        color: #166534;
        margin-top: 0.5rem;
    }

    /* ====== CONTAINERS DE GRÁFICOS ====== */
    .chart-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        height: 100%;
    }

    .chart-card .chart-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .chart-card .chart-title i {
        color: var(--dash-verde-medio);
    }

    /* ====== TABELAS ====== */
    .table-dash {
        font-size: 0.875rem;
    }

    .table-dash thead {
        background: linear-gradient(135deg, #166534 0%, #16a34a 100%);
        color: white;
    }

    .table-dash thead th {
        font-weight: 600;
        padding: 0.75rem 1rem;
        border: none;
    }

    .table-dash tbody tr {
        transition: background 0.15s;
    }

    .table-dash tbody tr:hover {
        background: #f0fdf4;
    }

    .table-dash tbody td {
        padding: 0.625rem 1rem;
        vertical-align: middle;
    }

    /* ====== TABELA RESUMO POR ANO ====== */
    .table-anos {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table-anos th,
    .table-anos td {
        padding: 0.625rem 0.75rem;
        text-align: left;
        border-bottom: 1px solid #e2e8f0;
    }

    .table-anos th {
        font-weight: 600;
        color: #64748b;
        font-size: 0.8rem;
        text-transform: uppercase;
    }

    .table-anos td {
        font-weight: 600;
        color: #1e293b;
    }

    .table-anos tr.total {
        background: #f0fdf4;
        font-weight: 700;
    }

    .table-anos tr.total td {
        color: var(--dash-verde-escuro);
    }

    /* ====== MEDIA DO LITRO CARD ====== */
    .media-litro-card {
        background: #f0fdf4;
        border: 1px solid #bbf7d0;
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1rem;
    }

    .media-litro-card .title {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--dash-verde-escuro);
        margin-bottom: 0.75rem;
        text-align: center;
        background: var(--dash-verde-claro);
        color: white;
        padding: 0.375rem;
        border-radius: 4px;
    }

    .media-litro-item {
        display: flex;
        justify-content: space-between;
        padding: 0.375rem 0;
        border-bottom: 1px solid #dcfce7;
    }

    .media-litro-item:last-child {
        border-bottom: none;
    }

    .media-litro-item .tipo {
        font-weight: 500;
        color: #374151;
    }

    .media-litro-item .valor {
        font-weight: 700;
        color: var(--dash-verde-escuro);
    }

    /* ====== LOADING ====== */
    .dash-loading {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 200px;
        color: #64748b;
    }

    .dash-loading i {
        font-size: 2rem;
        color: var(--dash-verde-medio);
    }

    /* ====== ÍCONE BOMBA DE COMBUSTÍVEL GRANDE ====== */
    .icon-bomba {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, var(--dash-verde-medio) 0%, var(--dash-verde-escuro) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

    .icon-bomba i {
        font-size: 1.75rem;
        color: white;
    }

    /* ====== RESPONSIVO ====== */
    @@media (max-width: 768px) {
        .dash-tabs {
            flex-direction: column;
        }
        
        .big-stat-card .big-value {
            font-size: 2rem;
        }
    }
</style>

