                            <div id="chartValorCategoria" style="height: 320px;"></div>
                        </div>
                    </div>

                    <!-- Gráfico: Valor do Litro por Mês -->
                    <div class="col-md-6">
                        <div class="chart-card" style="min-height: 380px;">
                            <h5 class="chart-title">
                                <i class="fa-duotone fa-chart-line"></i>
                                Valor do Litro
