@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model FrotiX.Pages.Usuarios.UpsertRecursoModel

@{
	ViewData["Title"] = "Recursos";
	ViewData["PageName"] = "Recurso_index";
	ViewData["Heading"] = "<i class='fa-duotone fa-book-journal-whills'></i> Cadastros: <span class='fw-300'>Recursos</span>";
	ViewData["Category1"] = "Cadastros";
	ViewData["PageIcon"] = "fa-duotone fa-book-journal-whills";
}

@section HeadBlock {
	<link href="~/css/ftx-card-styled.css" rel="stylesheet" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/dropify.min.css" />

	<style>
		/* ====== FONTE OUTFIT ====== */
		@@import url('https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800;900&display=swap');

		/* ====== ANIMAÇÃO GLOW FROTIX ====== */
		@@keyframes buttonWiggle {
			0% { transform: translateY(0) rotate(0deg); }
			25% { transform: translateY(-2px) rotate(-1deg); }
			50% { transform: translateY(-3px) rotate(0deg); }
			75% { transform: translateY(-2px) rotate(1deg); }
			100% { transform: translateY(0) rotate(0deg); }
		}

		/* ====== VARIÁVEIS LOCAIS ====== */
		:root {
			--ftx-recurso-azul: #3D5771;
			--ftx-recurso-azul-hover: #2d4559;
		}

		/* ====== OVERRIDE HEADER ====== */
		.ftx-card-header .ftx-card-title {
			font-family: 'Outfit', sans-serif !important;
			font-weight: 900 !important;
			color: #fff !important;
		}

		.ftx-card-header .ftx-card-title i {
			color: #fff !important;
			--fa-primary-color: #fff !important;
			--fa-secondary-color: rgba(255,255,255,0.7) !important;
		}

		/* ====== FORMULÁRIO - CONTROLES 38px ====== */
		.form-control-xs {
			height: 38px !important;
			padding: 0.375rem 0.75rem !important;
			font-size: 0.875rem !important;
			line-height: 1.5;
			border-radius: 0.375rem;
			border: 1px solid #ced4da;
		}

		.form-control-xs:focus {
			border-color: #3D5771;
			box-shadow: 0 0 0 0.2rem rgba(61, 87, 113, 0.25);
		}

		.label {
			font-weight: 600;
			font-size: 0.8rem;
			color: #495057;
			margin-bottom: 0.25rem;
			display: block;
		}

		input[type=checkbox] {
			vertical-align: middle;
			position: relative;
			bottom: 1px;
		}

		.escondido {
			display: none;
		}

		.espacofundo {
			padding-bottom: 20px;
		}

		/* ====== BOTÕES DE AÇÃO - COM GLOW FROTIX ====== */
		.btn-azul {
			transition: all .3s ease, transform .2s ease !important;
		}

		.btn-azul:hover {
			transform: translateY(-2px);
			animation: buttonWiggle 0.5s ease-in-out !important;
			box-shadow: 0 0 20px rgba(61, 87, 113, 0.6), 0 6px 12px rgba(61, 87, 113, 0.4) !important;
		}

		.btn-ftx-fechar:hover {
			transform: translateY(-2px);
			animation: buttonWiggle 0.5s ease-in-out !important;
		}

		/* ====== RESPONSIVIDADE ====== */
		@@media (max-width: 768px) {
			.ftx-card-header {
				flex-direction: column;
				align-items: stretch;
				text-align: center;
			}
		}
	</style>
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<div class="row espacofundo">
		<div class="col-xl-12">
			<div id="panel-1" class="panel ftx-card-styled">
				<div id="painelfundo" class="panel-container show espacofundo">

					<!-- Header Padrão FrotiX -->
					<div class="ftx-card-header">
						<h2 class="titulo-paginas">
							<i class="fa-duotone fa-book-journal-whills"></i>
							@(Model.RecursoObj.Recurso.RecursoId != Guid.Empty ? "Atualizar" : "Criar") Recurso
						</h2>
						<div class="ftx-card-actions">
							<a asp-page="./Recursos" class="btn btn-header-orange" data-ftx-loading>
								<i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i>
								Voltar à Lista
							</a>
						</div>
					</div>

					<!-- Formulário -->
					<div class="panel-content">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						@if (Model.RecursoObj.Recurso.RecursoId != Guid.Empty)
						{
							<input type="hidden" asp-for="RecursoObj.Recurso.RecursoId" />
						}

						<div class="col-12 pt-3">

							<div class="row">
								<div class="col-8">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="RecursoObj.Recurso.Nome"></label>
										<span class="text-danger font-weight-light" asp-validation-for="RecursoObj.Recurso.Nome"></span>
										<input class="form-control form-control-xs" asp-for="RecursoObj.Recurso.Nome" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="RecursoObj.Recurso.NomeMenu"></label>
										<span class="text-danger font-weight-light" asp-validation-for="RecursoObj.Recurso.NomeMenu"></span>
										<input class="form-control form-control-xs" asp-for="RecursoObj.Recurso.NomeMenu" />
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-10">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="RecursoObj.Recurso.Descricao"></label>
										<span class="text-danger font-weight-light" asp-validation-for="RecursoObj.Recurso.Descricao"></span>
										<input class="form-control form-control-xs" asp-for="RecursoObj.Recurso.Descricao" />
									</div>
								</div>
								<div class="col-2">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="RecursoObj.Recurso.Ordem"></label>
										<span class="text-danger font-weight-light" asp-validation-for="RecursoObj.Recurso.Ordem"></span>
										<input class="form-control form-control-xs" asp-for="RecursoObj.Recurso.Ordem" />
									</div>
								</div>
							</div>

							<br />
							<br />

							<div class="form-group row">
								<div class="col-12">
									<div class="row float-left">
										<div class="col-6 float-left">
											@if (Model.RecursoObj.Recurso.RecursoId != Guid.Empty)
											{
												<button method="post" asp-page-handler="Edit" asp-route-id="@Model.RecursoObj.Recurso.RecursoId" class="btn btn-azul btn-submit-spin form-control" style="width:200px">
													<i class="fa-duotone fa-floppy-disk icon-space icon-pulse"></i> Atualizar Recurso
												</button>
											}
											else
											{
												<button type="submit" value="Submit" asp-page-handler="Submit" class="btn btn-azul btn-submit-spin form-control" style="width:200px">
													<i class="fa-duotone fa-floppy-disk icon-space icon-pulse"></i> Criar Recurso
												</button>
											}
										</div>
										<div class="col-6 float-right">
											<a asp-page="./Recursos" class="btn btn-ftx-fechar form-control" style="width:200px" data-ftx-loading>
												<i class="fa-duotone fa-circle-xmark icon-space icon-pulse"></i> Cancelar Operação
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section ScriptsBlock {

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

	<script src="~/js/dropify.min.js"></script>

}
