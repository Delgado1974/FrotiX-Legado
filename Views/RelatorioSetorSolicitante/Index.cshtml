@using Stimulsoft.Report.Mvc;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Localizing the Viewer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="col-6">
                    <a href="./Index" class="btn btn-voltar form-control" data-ftx-loading><i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i> Voltar Ã  Lista</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @Html.StiNetCoreViewer(new StiNetCoreViewerOptions()
            {
                Actions =
                    {
                    GetReport = "GetReport",
                    ViewerEvent = "ViewerEvent"
                    },

                    Localization = "StimulsoftLocalization/pt-BR.xml"
            })
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - My Company - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

